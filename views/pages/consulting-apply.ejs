    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-top: 2rem;
}

.benefit-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.9);
}

.benefit-item i {
    font-size: 1.2rem;
}

.consulting-form-section {
    background: var(--gray-50);
}

.consulting-form {
    background: var(--white);
    border-radius: var(--border-radius-xl);
    box-shadow: var(--shadow-lg);
    overflow: hidden;
}

.form-header {
    background: linear-gradient(135deg, var(--primary), #2d4a6b);
    color: var(--white);
    text-align: center;
    padding: 3rem 2rem;
}

.form-title {
    color: var(--white);
    font-size: 2rem;
    margin-bottom: 1rem;
}

.form-description {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.1rem;
    margin: 0;
}

.form-step {
    padding: 2.5rem;
    border-bottom: 1px solid var(--gray-200);
}

.form-step:last-of-type {
    border-bottom: none;
}

.step-title {
    display: flex;
    align-items: center;
    gap: 1rem;
    color: var(--primary);
    font-size: 1.4rem;
    margin-bottom: 2rem;
}

.step-number {
    width: 35px;
    height: 35px;
    background: linear-gradient(135deg, var(--secondary), #e6b885);
    color: var(--white);
    border-radius: 50%;
